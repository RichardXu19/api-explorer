    "schemes": [
        "https"
    ], 
    "tags": [
        {
            "name": "extensibility-plugins"
        }, 
        {
            "name": "extensibility-wizard-states"
        }
    ], 
    "basePath": "/component-registry", 
    "definitions": {
        "Sort": {
            "type": "object"
        }, 
        "PageExtensionInfo": {
            "type": "object", 
            "properties": {
                "sort": {
                    "$ref": "#/definitions/Sort"
                }, 
                "last": {
                    "default": false, 
                    "type": "boolean"
                }, 
                "number": {
                    "type": "integer", 
                    "format": "int32"
                }, 
                "first": {
                    "default": false, 
                    "type": "boolean"
                }, 
                "content": {
                    "items": {
                        "$ref": "#/definitions/extensionInfo"
                    }, 
                    "type": "array"
                }, 
                "totalPages": {
                    "type": "integer", 
                    "format": "int32"
                }, 
                "size": {
                    "type": "integer", 
                    "format": "int32"
                }, 
                "totalElements": {
                    "type": "integer", 
                    "format": "int64"
                }, 
                "numberOfElements": {
                    "type": "integer", 
                    "format": "int32"
                }
            }
        }, 
        "extensionInfo": {
            "xml": {
                "name": "extensionInfo"
            }, 
            "required": [
                "plugin"
            ], 
            "type": "object", 
            "properties": {
                "extensionId": {
                    "xml": {
                        "attribute": true
                    }, 
                    "type": "string"
                }, 
                "extensionPointId": {
                    "xml": {
                        "attribute": true
                    }, 
                    "type": "string"
                }, 
                "description": {
                    "type": "string"
                }, 
                "plugin": {
                    "$ref": "#/definitions/pluginInfo"
                }, 
                "label": {
                    "type": "string"
                }, 
                "iconUrl": {
                    "type": "string"
                }, 
                "json": {
                    "type": "string"
                }, 
                "permissions": {
                    "items": {
                        "type": "string"
                    }, 
                    "type": "array"
                }
            }
        }, 
        "pluginInfo": {
            "xml": {
                "name": "pluginInfo"
            }, 
            "type": "object", 
            "properties": {
                "publisher": {
                    "xml": {
                        "attribute": true
                    }, 
                    "type": "string"
                }, 
                "pluginId": {
                    "xml": {
                        "attribute": true
                    }, 
                    "type": "string"
                }
            }
        }, 
        "Plugin": {
            "required": [
                "metadata", 
                "pluginUrl"
            ], 
            "type": "object", 
            "properties": {
                "id": {
                    "type": "string"
                }, 
                "pluginUrl": {
                    "minLength": 1, 
                    "type": "string", 
                    "maxLength": 255
                }, 
                "metadata": {
                    "type": "string"
                }
            }
        }, 
        "WizardState": {
            "type": "object", 
            "properties": {
                "goalId": {
                    "minLength": 1, 
                    "type": "string", 
                    "maxLength": 255
                }, 
                "userId": {
                    "minLength": 1, 
                    "type": "string", 
                    "maxLength": 255
                }, 
                "id": {
                    "type": "string", 
                    "format": "uuid"
                }, 
                "tenantId": {
                    "minLength": 1, 
                    "type": "string", 
                    "maxLength": 255
                }
            }
        }
    }, 
    "swagger": "2.0"
}